{
  "name": "portfolio",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start:ui": "ng serve --project web",
    "start:ui:prod": "ng serve --project web --configuration production",
    "start:ui:ci": "nohup ng serve --project web --port=4200 > serve.log 2>&1 &",
    "build": "ng build web",
    "watch": "ng build web --watch --configuration development",
    "test:functions": "npm --prefix apps/functions run test",
    "test:web": "ng test --project web --code-coverage",
    "test": "npm run test:functions && npm run test:web",
    "test:ci": "ng test --project web --karma-config apps/web/karma.ci.conf.js --code-coverage && npm run test:functions",
    "lint:functions": "npm -prefix apps/functions run lint",
    "lint:web": "ng lint web",
    "lint": "ng lint web",
    "start:backend": "npm --prefix apps/functions run build && firebase emulators:start --only firestore,functions",
    "start:backend:ci": "npm --prefix apps/functions run build && firebase emulators:start --only firestore,functions",
    "e2e": "playwright test",
    "prepare": "husky",
    "format": "prettier ./apps/web/src --write",
    "preflight": "npm run lint && npm run format && npm run test && npm run e2e"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx}": [
      "eslint ./apps/web/src/**/*.*",
      "prettier ./apps/web/src --write"
    ],
    "*.{css,scss,html,json,md}": [
      "prettier ./apps/web/src --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/cdk": "^19.2.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/fire": "^19.1.0",
    "@angular/forms": "^19.2.0",
    "@angular/localize": "^19.2.0",
    "@angular/material": "^19.2.0",
    "@angular/material-moment-adapter": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "firebase": "^11.7.0",
    "moment": "^2.18.1",
    "ngx-skeleton-loader": "^11.0.0",
    "prettier": "^3.5.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@playwright/test": "^1.52.0",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^12.11.1",
    "@types/node-fetch": "^2.6.13",
    "angular-eslint": "^19.3.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-css": "^0.11.0",
    "eslint-plugin-prettier": "^5.3.1",
    "firebase-admin": "^13.3.0",
    "husky": "^9.1.7",
    "jasmine-core": "~3.10.0",
    "jest": "^29.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "karma-json-reporter": "^1.2.1",
    "karma-spec-reporter": "^0.0.36",
    "lint-staged": "^15.5.1",
    "stylelint": "^16.19.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-scss": "^6.12.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.27.0"
  }
}
