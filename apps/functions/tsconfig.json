{
  "compilerOptions": {
    "module": "NodeNext",
    "types": ["jest", "node"],
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"]
}
